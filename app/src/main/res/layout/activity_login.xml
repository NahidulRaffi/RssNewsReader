<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root_layout"
    android:background="@color/colorWhite"
    tools:context=".activities.LoginActivity">


    <androidx.core.widget.NestedScrollView
        android:clipToPadding="false"
        android:paddingBottom="60dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:visibility="visible"
            android:id="@+id/ll_1"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:visibility="visible"
                android:layout_marginBottom="8dp"
                android:layout_gravity="center"
                android:src="@drawable/rss_logo"
                android:layout_width="55dp"
                android:layout_height="55dp"/>
            <TextView
                android:layout_marginBottom="32dp"
                android:gravity="center"
                android:text="RSS Feed Sign In"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical"
                android:background="@drawable/border_round_edit_profile"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/profile_height_size">
                <ImageView
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/ic_user"
                    android:layout_width="@dimen/img_size"
                    android:layout_height="@dimen/img_size"/>
                <EditText
                    android:inputType="textEmailAddress"
                    android:id="@+id/et_user_name"
                    android:textSize="14sp"
                    android:hint="User Name"
                    android:layout_marginLeft="16dp"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical"
                android:background="@drawable/border_round_edit_profile"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/profile_height_size">
                <ImageView
                    android:padding="0dp"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/ic_password"
                    android:layout_width="@dimen/img_size"
                    android:layout_height="@dimen/img_size"/>
                <EditText
                    android:inputType="textPassword"
                    android:id="@+id/et_password"
                    android:textSize="14sp"
                    android:hint="Password *"
                    android:layout_marginLeft="16dp"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <net.cachapa.expandablelayout.ExpandableLayout
                android:id="@+id/ex"
                app:el_duration="1000"
                app:el_expanded="false"
                app:el_parallax="0.5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent" android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_marginBottom="16dp"
                        android:gravity="center_vertical"
                        android:background="@drawable/border_round_edit_profile"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/profile_height_size">
                        <ImageView
                            android:layout_marginLeft="16dp"
                            android:src="@drawable/ic_age"
                            android:layout_width="@dimen/img_size"
                            android:layout_height="@dimen/img_size"/>
                        <EditText
                            android:inputType="numberSigned"
                            android:id="@+id/et_name"
                            android:textSize="14sp"
                            android:hint="Name"
                            android:layout_marginLeft="16dp"
                            android:background="@android:color/transparent"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginBottom="16dp"
                        android:gravity="center_vertical"
                        android:background="@drawable/border_round_edit_profile"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/profile_height_size">
                        <ImageView
                            android:layout_marginLeft="16dp"
                            android:src="@drawable/ic_age"
                            android:layout_width="@dimen/img_size"
                            android:layout_height="@dimen/img_size"/>
                        <EditText
                            android:inputType="numberSigned"
                            android:id="@+id/et_age"
                            android:textSize="14sp"
                            android:hint="Age"
                            android:layout_marginLeft="16dp"
                            android:background="@android:color/transparent"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                    </LinearLayout>
                </LinearLayout>
            </net.cachapa.expandablelayout.ExpandableLayout>

            <RelativeLayout
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:layout_gravity="bottom|center"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/btn_sign_in"
                    android:gravity="center"
                    android:text="Sign In"
                    android:textSize="16sp"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/shape_rounder_corner_flight_search">

                </TextView>

                <com.victor.loading.rotate.RotateLoading
                    android:id="@+id/progress"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:loading_width="2dp"
                    app:loading_color="#ffffff"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="26dp">

                <View
                    android:layout_centerInParent="true"
                    android:background="#777"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>

                <TextView
                    android:layout_centerInParent="true"
                    android:background="@color/colorWhite"
                    android:visibility="visible"
                    android:gravity="center"
                    android:text="OR"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
            </RelativeLayout>

            <TextView
                android:layout_marginBottom="32dp"
                android:id="@+id/tv_sign_up"
                android:visibility="visible"
                android:alpha="0.8"
                android:gravity="center"
                android:text="Don't have an account?"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:textStyle="normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</RelativeLayout>