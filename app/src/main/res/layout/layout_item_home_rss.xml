<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="6dp"
        card_view:cardBackgroundColor="@color/colorWhite"
        card_view:cardCornerRadius="0dp"
        card_view:cardElevation="4dp" >
        <RelativeLayout
            android:id="@+id/rl_root"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/ll"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:id="@+id/tv_feed_name"
                    android:text="Chris Smalling: Manchester United defender set for Roma loan move"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_details"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:textSize="14sp"
                    android:textColor="#999"
                    android:textStyle="normal"
                    android:text="Manchester United defender Chris Smalling is in Italy to finalise a loan move to Roma, says Old Trafford boss Ole Gunnar Solskjaer."
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_date"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:gravity="right"
                    android:text="23, july 2019"
                    android:textSize="14sp"
                    android:textColor="#444"
                    android:textStyle="normal"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>